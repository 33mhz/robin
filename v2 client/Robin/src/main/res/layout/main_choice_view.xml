<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:x="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
>
	<ImageView
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:scaleType="centerCrop"
		android:src="@raw/splash_bg_1"
		android:contentDescription="Modern building"
	/>

	<ImageView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:adjustViewBounds="true"
		android:src="@drawable/logo_large"
		android:layout_margin="10dp"
		android:layout_gravity="center_horizontal"
	/>

	<ImageView
		android:layout_width="match_parent"
		android:layout_height="100dp"
		android:layout_gravity="bottom"
		android:background="@drawable/dark_fade_bottom"
		android:contentDescription="Dark bottom"
	/>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:layout_gravity="bottom"
		android:paddingTop="10dp"
		android:paddingBottom="10dp"
		android:weightSum="2"
        android:baselineAligned="false"
	>
		<LinearLayout 
			android:layout_height="wrap_content"
			android:layout_width="match_parent"
			android:layout_weight="1"
			android:orientation="vertical"
			android:id="@+id/login_button"
			android:clickable="true"
		>
			<TextView
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:text="@string/splash_login"
				android:textColor="#ffffffff"
				android:shadowColor="#ff000000"
				android:shadowDx="1"
				android:shadowDy="1"
				android:shadowRadius="1.0"
				android:textSize="24sp"
				android:layout_gravity="center"
				android:gravity="center"
				android:fontFamily="sans-serif-light"
			/>
			
			<TextView
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:text="@string/splash_login_desc"
				android:textColor="#ffffffff"
				android:shadowColor="#ff000000"
				android:shadowDx="1"
				android:shadowDy="1"
				android:shadowRadius="1.0"
				android:textSize="12sp"
				android:layout_gravity="center"
				android:gravity="center"
				android:fontFamily="sans-serif-light"
			/>
		</LinearLayout>
		
		<LinearLayout
			android:layout_height="wrap_content"
			android:layout_width="match_parent"
			android:layout_weight="1"
			android:orientation="vertical"
			android:id="@+id/signup_button"
		>
			<TextView
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:text="@string/splash_signup"
				android:textColor="#ffffffff"
				android:shadowColor="#ff000000"
				android:shadowDx="1"
				android:shadowDy="1"
				android:shadowRadius="1.0"
				android:maxLines="1"
				android:textSize="24sp"
				android:layout_gravity="center"
				android:gravity="center"
				android:fontFamily="sans-serif-light"
			/>
			
			<TextView
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:text="@string/splash_signup_desc"
				android:textColor="#ffffffff"
				android:shadowColor="#ff000000"
				android:shadowDx="1"
				android:shadowDy="1"
				android:shadowRadius="1.0"
				android:textSize="12sp"
				android:layout_gravity="center"
				android:gravity="center"
				android:maxLines="1"
				android:fontFamily="sans-serif-light"
			/>
		</LinearLayout>
	</LinearLayout>

	<ImageView
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:background="@drawable/full_fade"
		android:alpha="0.2"
	/>
</FrameLayout>