<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:id="@+id/root_view"
	android:descendantFocusability="blocksDescendants"
	android:orientation="vertical"
	android:padding="8dp"
>
	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
	>
		<in.lib.view.TextChronometer
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/date"
			android:layout_alignParentEnd="true"
			android:layout_marginStart="8dp"
			android:gravity="end"
			style="?attr/rbn_channel_date"
		/>

		<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:id="@+id/title"
			android:layout_toStartOf="@id/date"
			android:text="@string/private_messaging"
			style="?attr/rbn_channel_title"
		/>
	</RelativeLayout>

	<in.lib.view.FlowLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:id="@+id/avatar_container"
		android:layout_marginTop="12dp"
		app:orientation="horizontal"
		app:horizontalSpacing="4dp"
		app:verticalSpacing="4dp"
	/>

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:id="@+id/recent_message"
		android:layout_marginTop="12dp"
		android:layout_marginBottom="4dp"
	>
		<in.lib.view.AvatarImageView
			android:layout_width="@dimen/avatar_width"
			android:layout_height="@dimen/avatar_height"
			android:id="@+id/avatar"
			android:layout_marginEnd="8dp"
			android:clickable="true"
			android:longClickable="true"
		/>

		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_toEndOf="@id/avatar"
		>
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:id="@+id/username_title"
				android:maxLines="1"
				style="?attr/rbn_post_user_title"
			/>

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:id="@+id/username_subtitle"
				android:maxLines="1"
				android:layout_toEndOf="@id/username_title"
				android:layout_marginStart="6dp"
				android:layout_alignBaseline="@id/username_title"
				style="?attr/rbn_post_user_sub_title"
			/>

			<in.lib.view.LinkedTextView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:id="@+id/post_text"
				android:layout_below="@id/username_title"
				style="?attr/rbn_post_text"
			/>
		</RelativeLayout>
	</RelativeLayout>
</LinearLayout>