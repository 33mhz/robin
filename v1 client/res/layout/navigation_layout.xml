<?xml version="1.0" encoding="utf-8"?>
<ScrollView
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="?attr/rbn_nav_bg"
>
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:id="@+id/main"
		android:gravity="center_horizontal"
	>
		<in.lib.view.HintedAspectRatioImageButton
			android:layout_width="match_parent"
			android:layout_height="0dp"
			android:src="@drawable/default_avatar"
			android:id="@+id/user_button"
			android:layout_margin="7dp"
			android:adjustViewBounds="true"
			android:scaleType="fitXY"
			android:background="@drawable/light_profile_avatar_fade"
			android:contentDescription="@string/accounts"
		/>
		<in.lib.view.HintedAspectRatioImageButton
			android:layout_width="match_parent"
			android:layout_height="0dp"
			android:src="?attr/rbn_nav_icon_timeline"
			android:id="@+id/home_button"
			android:contentDescription="@string/timeline"
			android:background="?attr/rbn_select_background_drawable"
		/>
		<in.lib.view.HintedAspectRatioImageButton
			android:layout_width="match_parent"
			android:layout_height="0dp"
			android:src="?attr/rbn_nav_icon_mentions"
			android:id="@+id/mentions_button"
			android:contentDescription="@string/mentions"
			android:background="?attr/rbn_select_background_drawable"
		/>
		<in.lib.view.HintedAspectRatioImageButton
			android:layout_width="match_parent"
			android:layout_height="0dp"
			android:src="?attr/rbn_nav_icon_global"
			android:id="@+id/global_button"
			android:contentDescription="@string/global"
			android:background="?attr/rbn_select_background_drawable"
		/>
		<in.lib.view.HintedAspectRatioImageButton
			android:layout_width="match_parent"
			android:layout_height="0dp"
			android:src="?attr/rbn_nav_icon_pm"
			android:id="@+id/pm_button"
			android:contentDescription="@string/channels"
			android:background="?attr/rbn_select_background_drawable"
		/>
		<in.lib.view.HintedAspectRatioImageButton
			android:layout_width="match_parent"
			android:layout_height="0dp"
			android:src="?attr/rbn_nav_icon_drafts"
			android:id="@+id/drafts_button"
			android:contentDescription="@string/drafts"
			android:background="?attr/rbn_select_background_drawable"
		/>
		<in.lib.view.HintedAspectRatioImageButton
			android:layout_width="match_parent"
			android:layout_height="0dp"
			android:src="?attr/rbn_nav_icon_profile"
			android:id="@+id/profile_button"
			android:contentDescription="@string/profile"
			android:background="?attr/rbn_select_background_drawable"
		/>
		<in.lib.view.HintedAspectRatioImageButton
			android:layout_width="match_parent"
			android:layout_height="0dp"
			android:src="?attr/rbn_nav_icon_starred"
			android:id="@+id/starred_button"
			android:contentDescription="@string/starred"
			android:background="?attr/rbn_select_background_drawable"
		/>
		<in.lib.view.HintedAspectRatioImageButton
			android:layout_width="match_parent"
			android:layout_height="0dp"
			android:src="?attr/rbn_nav_icon_search"
			android:id="@+id/hash_button"
			android:contentDescription="@string/search"
			android:background="?attr/rbn_select_background_drawable"
		/>
		<in.lib.view.HintedAspectRatioImageButton
			android:layout_width="match_parent"
			android:layout_height="0dp"
			android:src="?attr/rbn_nav_icon_settings"
			android:id="@+id/settings_button"
			android:contentDescription="@string/settings"
			android:background="?attr/rbn_select_background_drawable"
		/>
		<in.lib.view.HintedAspectRatioImageButton
			android:layout_width="match_parent"
			android:layout_height="0dp"
			android:src="?attr/rbn_nav_icon_update"
			android:id="@+id/update_button"
			android:contentDescription="@string/update"
			android:background="?attr/rbn_select_background_drawable"
			android:visibility="gone"
		/>
		<in.lib.view.HintedAspectRatioImageButton
			android:layout_width="match_parent"
			android:layout_height="0dp"
			android:src="?attr/rbn_nav_icon_about"
			android:id="@+id/about_button"
			android:contentDescription="@string/about"
			android:background="?attr/rbn_select_background_drawable"
		/>
	</LinearLayout>
</ScrollView>