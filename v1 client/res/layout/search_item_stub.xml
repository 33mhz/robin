<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:background="?attr/rbn_list_item_bg"
	android:orientation="vertical"
>
	<TextView
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:textSize="16dp"
		android:textColor="?attr/rbn_title_color"
		android:id="@+id/title"
		android:paddingTop="20dp"
		android:paddingBottom="20dp"
		android:paddingLeft="10dp"
		android:paddingRight="10dp"
	/>
	
	<ImageView android:id="@+id/divider" android:layout_width="match_parent" android:layout_height="1px" android:background="?attr/rbn_divider_color"/>
</LinearLayout>