<?xml version="1.0" encoding="utf-8"?>
<ScrollView
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="?attr/rbn_profile_nav_bg"
	android:fadingEdge="none"
	android:fadingEdgeLength="0px"
>
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:id="@+id/main"
		android:gravity="center_horizontal"
	>
		<in.lib.view.HintedAspectRatioImageButton
			android:layout_width="match_parent"
			android:layout_height="0dp"
			android:src="?attr/rbn_nav_icon_pm"
			android:id="@+id/menu_message_button"
			android:contentDescription="@string/message_user"
			android:background="?attr/rbn_select_background_drawable"
		/>
		<in.lib.view.HintedAspectRatioImageButton
			android:layout_width="match_parent"
			android:layout_height="0dp"
			android:src="?attr/rbn_nav_icon_follow"
			android:id="@+id/menu_follow_button"
			android:contentDescription="@string/follow"
			android:background="?attr/rbn_select_background_drawable"
		/>
		<in.lib.view.HintedAspectRatioImageButton
			android:layout_width="match_parent"
			android:layout_height="0dp"
			android:src="?attr/rbn_nav_icon_mute"
			android:id="@+id/mute_button"
			android:background="?attr/rbn_select_background_drawable"
			android:contentDescription="@string/mute"
		/>
		<in.lib.view.HintedAspectRatioImageButton
			android:layout_width="match_parent"
			android:layout_height="0dp"
			android:src="?attr/rbn_nav_icon_block"
			android:id="@+id/block_button"
			android:background="?attr/rbn_select_background_drawable"
			android:contentDescription="@string/block"
		/>
		<in.lib.view.HintedAspectRatioImageButton
			android:layout_width="match_parent"
			android:layout_height="0dp"
			android:src="?attr/rbn_nav_icon_mentions"
			android:id="@+id/menu_mentions"
			android:background="?attr/rbn_select_background_drawable"
			android:contentDescription="@string/mentions"
		/>
		<in.lib.view.HintedAspectRatioImageButton
			android:layout_width="match_parent"
			android:layout_height="0dp"
			android:src="?attr/rbn_nav_icon_followers"
			android:id="@+id/menu_followers"
			android:background="?attr/rbn_select_background_drawable"
			android:contentDescription="@string/followers"
		/>
		<in.lib.view.HintedAspectRatioImageButton
			android:layout_width="match_parent"
			android:layout_height="0dp"
			android:src="?attr/rbn_nav_icon_starred"
			android:id="@+id/star_button"
			android:background="?attr/rbn_select_background_drawable"
			android:contentDescription="@string/starred"
		/>
		<in.lib.view.HintedAspectRatioImageButton
			android:layout_width="match_parent"
			android:layout_height="0dp"
			android:src="?attr/rbn_nav_icon_muted"
			android:id="@+id/muted_button"
			android:background="?attr/rbn_select_background_drawable"
			android:contentDescription="@string/muted_users"
		/>
	</LinearLayout>
</ScrollView>