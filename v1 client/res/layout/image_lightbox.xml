<LinearLayout 
	xmlns:android="http://schemas.android.com/apk/res/android" 
	android:layout_width="match_parent" 
	android:layout_height="match_parent" 
	android:minWidth="1000dp"  
	android:minHeight="1000dp"
> 
	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:background="#a0000000"
	>
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			android:layout_gravity="bottom"
			android:gravity="bottom"
			android:layout_alignParentBottom="true"
			android:id="@+id/options_container"
		>
			<ImageView
				android:layout_width="match_parent"
				android:layout_height="2dp"
				android:background="@color/light_action_bar_tab_underline"
			/>
			
			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal"
				android:background="#C0000000"
				android:weightSum="1"
			>
				<in.lib.view.HintedImageButton
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:src="@drawable/lightbox_icon_web"
					android:layout_weight="0.25"
					android:paddingTop="10dp"
					android:paddingBottom="10dp"
					android:background="?attr/rbn_select_background_drawable"
					android:id="@+id/icon_web"
					android:contentDescription="@string/open_url"
				/>
				<in.lib.view.HintedImageButton
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:src="@drawable/lightbox_icon_copy"
					android:layout_weight="0.25"
					android:background="?attr/rbn_select_background_drawable"
					android:paddingTop="10dp"
					android:paddingBottom="10dp"
					android:id="@+id/icon_copy"
					android:contentDescription="@string/copy_url"
				/>
				<in.lib.view.HintedImageButton
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:src="@drawable/lightbox_icon_share"
					android:layout_weight="0.25"
					android:background="?attr/rbn_select_background_drawable"
					android:paddingTop="10dp"
					android:paddingBottom="10dp"
					android:id="@+id/icon_share"
					android:contentDescription="@string/share_image"
				/>
				<in.lib.view.HintedImageButton
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:src="@drawable/lightbox_icon_download"
					android:layout_weight="0.25"
					android:background="?attr/rbn_select_background_drawable"
					android:paddingTop="10dp"
					android:paddingBottom="10dp"
					android:id="@+id/icon_download"
					android:contentDescription="@string/save_image"
				/>
				<!-- <in.lib.view.HintedImageButton
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:src="@drawable/lightbox_icon_more"
					android:layout_weight="0.25"
					android:background="?attr/rbn_select_background_drawable"
					android:paddingTop="10dp"
					android:paddingBottom="10dp"
					android:id="@+id/icon_more"
				/> -->
			</LinearLayout>
		</LinearLayout>
		
		<in.lib.view.SwipableViewPager
			android:id="@+id/pager"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_above="@id/options_container"
		/>
	</RelativeLayout>
</LinearLayout>