<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
>
	<LinearLayout
		android:layout_height="3dp"
		android:layout_width="match_parent"
		android:orientation="horizontal"
		android:layout_alignParentTop="true"
		android:id="@+id/indicator"
		android:background="?attr/rbn_action_bar_line_color"
	/>
	
	<LinearLayout
		android:id="@+id/main"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="horizontal"
		android:layout_below="@id/indicator"
	>
		<fragment
			android:layout_width="100dp"
			android:layout_height="match_parent"
			class="in.rob.client.navigation.NavigationFragment"
			android:id="@+id/frame"
		/>
		
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical"
		>
			<com.viewpagerindicator.TitlePageIndicator
				android:layout_height="wrap_content"
				android:layout_width="match_parent"
				android:id="@+id/titles"
				style="@style/SettingsTitlePageIndicator"
				android:layout_below="@id/indicator"
				android:visibility="gone"
			/>	
			
			<in.lib.view.JazzyViewPager
				android:id="@+id/pager"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:background="?attr/rbn_list_view_bg" 
			/>
		</LinearLayout>
	</LinearLayout>
</RelativeLayout>